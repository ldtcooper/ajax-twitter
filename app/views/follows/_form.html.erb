<% if user.followers.include?(current_user) %>
  <% follow_state = "followed" %>
<% else %>
  <% follow_state = "unfollowed" %>
<% end %>
<button type="button" class="follow-toggle" data-user-id="<%= user.id %>" data-initial-follow-state="<%= follow_state %>"></button>


